@page
@model RegisterModel

<!-- ================ start banner area ================= -->	
<section class="blog-banner-area" id="category">
	<div class="container h-100">
		<div class="blog-banner">
			<div class="text-center">
				<h1>Register</h1>
				<nav aria-label="breadcrumb" class="banner-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Register</li>
        </ol>
        </nav>
			</div>
		</div>
</div>
</section>
<!-- ================ end banner area ================= -->
  
<!--================Register Box Area =================-->
<section class="login_box_area section-margin">
	<div class="container">
		<div class="row">
			<div class="col-lg-6">
				<div class="login_box_img">
					<div class="hover">
						<h4>Already have an account?</h4>
						<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
						<a class="button button-account" href="login.html">Login Now</a>
					</div>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="login_form_inner register_form_inner">
					<h3>Create an account</h3>
					<form class="row login_form" method="post">
						<div class="col-md-6 form-group">
							<input asp-for="Input.Name" class="form-control" placeholder="Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Name'">
							<span asp-validation-for="Input.Name" class="text-danger"></span>
						</div>
						<div class="col-md-6 form-group">
							<input asp-for="Input.Surname" class="form-control" placeholder="Surname" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Surname'">
							<span asp-validation-for="Input.Surname" class="text-danger"></span>
						</div>
						<div class="col-md-12 form-group">
							<input asp-for="Input.Email" class="form-control" placeholder="Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'">
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="col-md-12 form-group">
							<input asp-for="Input.Password" class="form-control" placeholder="Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Password'">
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="col-md-12 form-group">
							<input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'">
							<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="col-md-12 form-group">
							<button type="submit" value="submit" class="button button-register w-100">Register</button>
						</div>
						<hr>
                        <div class="text-danger" asp-validation-summary="All"></div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
<!--================End Register Box Area =================-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
